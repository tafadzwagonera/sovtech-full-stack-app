{
  "name": "backend",
  "version": "1.0.0",
  "main": "build/server.js",
  "license": "MIT",
  "engines": {
    "node": "14.x",
    "npm": "6.x"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.5",
    "@graphql-codegen/typescript": "1.22.1",
    "@graphql-codegen/typescript-resolvers": "1.19.2",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.12.4",
    "@types/shelljs": "^0.8.8",
    "graphql": "^15.5.0",
    "graphql-tools": "^7.0.5",
    "nodemon": "^2.0.7",
    "shelljs": "^0.8.4",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "node build/server.js",
    "dev:start": "nodemon build/server.js",
    "dev:watch": "nodemon --config nodemon.json --exec 'yarn lint:fix && yarn tsc && yarn copy-assets'",
    "codegen": "graphql-codegen --config codegen.yml",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "tsc": "tsc",
    "copy-assets": "ts-node util/copyAssets",
    "clean": "ts-node util/clean",
    "build": "yarn clean && yarn tsc && yarn copy-assets"
  },
  "dependencies": {
    "@types/express": "^4.17.12",
    "apollo-server-express": "^2.25.1",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "graphql-import": "^1.0.2",
    "graphql-import-node": "^0.0.4",
    "lodash": "^4.17.21"
  }
}
